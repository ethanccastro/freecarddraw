<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= giftcardGiveaway_vRow.giftcardgiveaway_v_TITLE %></title>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <div class="main">
        <%- include('partials/navigation.ejs') %>
        <div class="main-singlegiveaway">
            <section class="main-singlegiveaway-component-one">
                <img src="../images/<%=giftcardGiveaway_vRow.giftcardgiveaway_v_IMAGE %>">
                    <div>
                        <div>
                            <%= giftcardGiveaway_vRow.giftcardgiveaway_v_TITLE %>
                        </div>
                        <div>
                            <%= giftcardGiveaway_vRow.giftcardgiveaway_v_giveawaybegindate.toLocaleString('en-us',{month:'short', year:'numeric', day: 'numeric', hour: 'numeric', minute: 'numeric'}) %>
                        </div>
                    </div>
            </section> 

            <form action="" method="post" id="form">
                <section class="main-form">
                    <h1>
                        Enter the giveaway
                    </h1>
                    <div>
                        <div>
                            Email:
                        </div>
                        <input id="email" name="email"></input>
                        <div>
                            Username:
                        </div>
                        <input id="username" name="username"></input>                        
                    </div>
                    <button id="entry" class="buttonStyle" type="submit">
                        Get entry
                    </button>
                    <div id="warning">

                    </div>
                </section>
                <input type="hidden" id="uuid" name="uuid"> 
            </form>
        </div>
    </div>
</body>
</html>